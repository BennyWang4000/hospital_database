<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hospital_database">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hospital_database"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.hospital_database.ui.patient_appointment.PatientAppointmentActivity"></activity>
        <activity android:name="com.example.hospital_database.ui.registration.RegistrationActivity" />
        <activity android:name="com.example.hospital_database.ui.clinic.ClinicActivity" />
        <activity android:name="com.example.hospital_database.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>